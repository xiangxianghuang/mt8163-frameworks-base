<com.android.systemui.statusbar.phone.NavigationBarView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/system_bar_background" >

    <FrameLayout
        android:id="@+id/rot0"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/nav_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical" >

            <!-- navigation controls -->
            <Button
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/accessibility_back"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@*android:string/more_item_label"
                android:textSize="15sp"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/ime_menu_id"
                android:layout_width="@dimen/navigation_extra_key_width"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" >
                <com.android.systemui.statusbar.policy.KeyButtonView
                    android:id="@+id/ime_switcher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/accessibility_ime_switch_button"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_ime_switcher_default"
                    android:visibility="invisible" />
                <com.android.systemui.statusbar.policy.KeyButtonView
                    android:id="@+id/menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/accessibility_menu"
                    android:scaleType="center"
                    android:src="@drawable/ic_sysbar_menu_land"
                    android:visibility="invisible"
                    systemui:keyCode="82" />
            </FrameLayout>

            <com.android.systemui.statusbar.policy.KeyButtonView
                android:id="@+id/home"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/accessibility_home"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:scaleType="center"
                android:src="@drawable/ic_sysbar_home"
                systemui:keyCode="3"
                systemui:keyRepeat="false" />

            <com.android.systemui.statusbar.policy.KeyButtonView
                android:id="@+id/back"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/home"
                android:contentDescription="@string/accessibility_back"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:scaleType="center"
                android:src="@drawable/ic_sysbar_back_land"
                systemui:keyCode="4" />

            <com.android.systemui.statusbar.policy.KeyButtonView
                android:id="@+id/recent_apps"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/home"
                android:contentDescription="@string/accessibility_recent"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:scaleType="center"
                android:src="@drawable/ic_sysbar_recent_land" />
            <!-- lights out layout to match exactly -->

            <!-- added for multi window -->
            <com.android.systemui.statusbar.policy.KeyButtonView
                android:id="@+id/multi_float"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:contentDescription="@string/accessibility_back"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/ic_sysbar_up"
                android:visibility="gone" />


            <com.android.systemui.statusbar.policy.KeyButtonView
                android:id="@+id/float_mode"
                android:layout_width="@dimen/navigation_extra_key_width"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/multi_float"
                android:scaleType="center"
                android:contentDescription="@string/accessibility_menu"
                android:src="@drawable/ic_sysbar_float_mode_off"
                android:visibility="gone"/>
                    
            <View
                android:id="@+id/button_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/float_mode"
                android:background="#6fdddddd"
                android:layout_gravity="center_vertical"
                android:visibility="gone"/>

            <com.android.systemui.statusbar.policy.KeyButtonView
                android:id="@+id/split_mode"
                android:layout_width="@dimen/navigation_extra_key_width"                
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/button_line"
                android:contentDescription="@string/accessibility_back"
                android:scaleType="center"
                android:src="@drawable/ic_sysbar_split_mode_off"
                android:visibility="gone" />
            <!-- added for restore button in multi window -->
            <com.android.systemui.statusbar.policy.KeyButtonView
                android:id="@+id/restore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/ime_menu_id"
                android:layout_toRightOf="@+id/recent_apps"
                android:contentDescription="@string/accessibility_back"
                android:src="@drawable/ic_sysbar_restore"
                android:visibility="gone" />
            <!-- added for restore button in multi window -->
        </RelativeLayout>

        <!-- lights out layout to match exactly -->
        <LinearLayout
            android:id="@+id/lights_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_weight="0"
                android:scaleType="center"
                android:src="@drawable/ic_sysbar_lights_out_dot_small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:scaleType="center"
                android:src="@drawable/ic_sysbar_lights_out_dot_large" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="40dp"
                android:layout_weight="0"
                android:scaleType="center"
                android:src="@drawable/ic_sysbar_lights_out_dot_small" />
        </LinearLayout>

        <com.android.systemui.statusbar.policy.DeadZone
            android:id="@+id/deadzone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            systemui:decayTime="@integer/navigation_bar_deadzone_decay"
            systemui:holdTime="@integer/navigation_bar_deadzone_hold"
            systemui:maxSize="@dimen/navigation_bar_deadzone_size_max"
            systemui:minSize="@dimen/navigation_bar_deadzone_size"
            systemui:orientation="horizontal" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/rot90"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0dp"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/nav_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical" >

            <!-- navigation controls -->
            <Button
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/accessibility_back"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@*android:string/more_item_label"
                android:textSize="15sp"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/ime_menu_id"
                android:layout_width="@dimen/navigation_extra_key_width"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" >

                <com.android.systemui.statusbar.policy.KeyButtonView
                    android:id="@+id/ime_switcher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/accessibility_ime_switch_button"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_ime_switcher_default"
                    android:visibility="invisible" />

                <com.android.systemui.statusbar.policy.KeyButtonView
                    android:id="@+id/menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/accessibility_menu"
                    android:scaleType="center"
                    android:src="@drawable/ic_sysbar_menu_land"
                    android:visibility="invisible"
                    systemui:keyCode="82" />
            </FrameLayout>

            <com.android.systemui.statusbar.policy.KeyButtonView
                android:id="@+id/home"
                android:layout_width="162dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/accessibility_home"
                android:paddingLeft="42dp"
                android:paddingRight="42dp"
                android:scaleType="center"
                android:src="@drawable/ic_sysbar_home"
                systemui:keyCode="3"
                systemui:keyRepeat="false" />

            <com.android.systemui.statusbar.policy.KeyButtonView
                android:id="@+id/back"
                android:layout_width="162dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/home"
                android:contentDescription="@string/accessibility_back"
                android:paddingLeft="42dp"
                android:paddingRight="42dp"
                android:scaleType="center"
                android:src="@drawable/ic_sysbar_back_land"
                systemui:keyCode="4" />

            <com.android.systemui.statusbar.policy.KeyButtonView
                android:id="@+id/recent_apps"
                android:layout_width="162dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/home"
                android:contentDescription="@string/accessibility_recent"
                android:paddingLeft="42dp"
                android:paddingRight="42dp"
                android:scaleType="center"
                android:src="@drawable/ic_sysbar_recent_land" />
            <!-- lights out layout to match exactly -->


            <!-- added for multi window -->
            <com.android.systemui.statusbar.policy.KeyButtonView
                android:id="@+id/multi_float"
                android:layout_width="162dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:contentDescription="@string/accessibility_back"
                android:paddingLeft="42dp"
                android:paddingRight="42dp"
                android:src="@drawable/ic_sysbar_up"
                android:visibility="gone" />
            <!-- added for multi window -->

            <!-- added for multi window -->
            <com.android.systemui.statusbar.policy.KeyButtonView
                android:id="@+id/float_mode"
                android:layout_width="@dimen/navigation_extra_key_width"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/multi_float"
                android:contentDescription="@string/accessibility_back"
                android:src="@drawable/ic_sysbar_float_mode_off"
                android:scaleType="center"
                android:visibility="gone" />
            <!-- added for multi window -->
            
            <View
                android:id="@+id/button_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/float_mode"
                android:background="#6fdddddd"
                android:layout_gravity="center_vertical"
                android:visibility="gone"/>

            <com.android.systemui.statusbar.policy.KeyButtonView
                android:id="@+id/split_mode"
                android:layout_width="@dimen/navigation_extra_key_width"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/button_line"
                android:contentDescription="@string/accessibility_back"
                android:src="@drawable/ic_sysbar_split_mode_off"
                android:scaleType="center"
                android:visibility="gone" />
            <!-- added for restore button in multi window -->
            <com.android.systemui.statusbar.policy.KeyButtonView
                android:id="@+id/restore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/ime_menu_id"
                android:layout_toRightOf="@+id/recent_apps"
                android:contentDescription="@string/accessibility_back"
                android:src="@drawable/ic_sysbar_restore"
                android:visibility="gone" />
            <!-- added for restore button in multi window -->
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lights_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:layout_weight="0"
                android:scaleType="center"
                android:src="@drawable/ic_sysbar_lights_out_dot_small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="0"
                android:scaleType="center"
                android:src="@drawable/ic_sysbar_lights_out_dot_large" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="40dp"
                android:layout_weight="0"
                android:scaleType="center"
                android:src="@drawable/ic_sysbar_lights_out_dot_small" />
        </LinearLayout>

        <com.android.systemui.statusbar.policy.DeadZone
            android:id="@+id/deadzone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            systemui:decayTime="@integer/navigation_bar_deadzone_decay"
            systemui:holdTime="@integer/navigation_bar_deadzone_hold"
            systemui:maxSize="@dimen/navigation_bar_deadzone_size_max"
            systemui:minSize="@dimen/navigation_bar_deadzone_size"
            systemui:orientation="vertical" />
    </FrameLayout>

</com.android.systemui.statusbar.phone.NavigationBarView>
